---
#####
# Used to configure yamlling so it skips some checks
# But also some files too
#####
extends: default

rules:
  line-length: disable
#  comments: disable
  comments-indentation: disable
  document-start: disable
  indentation: disable

ignore: |
  automations.yaml
  blueprints/*/homeassistant/*.yaml
  custom_components/
  scenes.yaml
  scripts.yaml
  themes/*.yaml
